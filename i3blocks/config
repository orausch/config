# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[volume]
label=VOL:
instance=Master
interval=5
signal=10

[memory]
color=#aaaaaa
label=MEM:
interval=30

[cpu_usage]
color=#aaaaaa
label=CPU:
interval=10

[ssid]
label=SSID:
interval=10

[wifi]
label=NET:
instance=wlp2s0
interval=10

[battery]
label=BAT:
#label=âš¡
#instance=1
interval=30

[mediaplayer]
color=#00ccff
interval=5
signal=10

# Date Time
[time]
color=#ffffff
command=date '+%Y-%m-%d %H:%M:%S'
interval=5
